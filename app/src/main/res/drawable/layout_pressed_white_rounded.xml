<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin3" />
            <stroke android:width="@dimen/margin1" android:color="@color/white2" />
            <gradient android:angle="-90" android:endColor="@color/white1" android:startColor="@color/white1" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin3" />
            <stroke android:width="@dimen/margin1" android:color="@color/white1" />
            <solid android:color="@color/white1" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin3" />
            <stroke android:width="@dimen/margin1" android:color="@color/white" />
            <gradient android:angle="-90" android:endColor="@color/white" android:startColor="@color/white" />
        </shape>
    </item>
</selector>