<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/margin120"
    android:layout_height="@dimen/margin100"
    android:id="@+id/crop_select_req"
    android:layout_margin="@dimen/margin2"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/margin4"
    app:cardElevation="@dimen/margin4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin8"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin4">

        <agri.app.Customviews.HelveticaNeuBoldTextView
            android:layout_width="wrap_content"
            android:id="@+id/crop_item_req_name"
            android:layout_height="wrap_content"
            android:text="@string/irrigation"
            android:textSize="@dimen/text_size20" />

        <agri.app.Customviews.HelveticaNeuRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crop_item_req_quant"
            android:text="@string/_5000_liters" />
    </LinearLayout>
</android.support.v7.widget.CardView>