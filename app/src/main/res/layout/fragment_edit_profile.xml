<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context=".editProfileFragmentModule.EditProfileFragment">


    <ScrollView
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin120"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_background" />

                <ImageView
                    android:id="@+id/cancel_edit_p"
                    android:layout_width="@dimen/margin32"
                    android:layout_height="@dimen/margin32"
                    android:layout_marginStart="@dimen/margin24"
                    android:layout_marginTop="@dimen/margin32"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:elevation="@dimen/margin6dp" />



                <ImageView
                    android:id="@+id/user_profile_photo"
                    android:layout_width="@dimen/margin120"
                    android:layout_height="@dimen/margin120"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/border"
                    android:elevation="@dimen/margin8"
                    android:padding="@dimen/margin16"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin140"
                    android:layout_below="@+id/header_cover_image"
                    android:background="@color/white"
                    android:paddingStart="@dimen/margin2"
                    android:paddingEnd="@dimen/margin2"
                    android:paddingBottom="@dimen/margin2">
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_layout"
                    android:id="@+id/temp_name"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_input_uname"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/full_name" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_contact_num"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/contact_number" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_gmail"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/gmail" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_gender"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="6"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/gender" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_dob"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/age" />

                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_address"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/address" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="2dp">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_land_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/land_size_area"
                            android:imeOptions="actionNext"
                            android:maxLength="25"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray_light" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_height="wrap_content">

                        <agri.app.Customviews.HelveticaNeuRegularEditText
                            android:id="@+id/reg_language"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:textColorHint="@color/gray_light"
                            android:layout_height="wrap_content"
                            android:hint="@string/language" />

                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_click_effect"
                        android:id="@+id/save_user_details"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:elevation="@dimen/margin4"
                        android:text="@string/save_details"/>

                </LinearLayout>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</FrameLayout>