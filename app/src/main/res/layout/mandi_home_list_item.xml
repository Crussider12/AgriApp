<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mandi_detail_item_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="@dimen/margin4"
    android:padding="@dimen/margin4"
    app:cardCornerRadius="@dimen/margin4"
    app:cardElevation="@dimen/margin4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin16"
        android:layout_marginBottom="@dimen/margin36"
        android:onClick="MandiGroupItemClick"
        android:orientation="vertical"
        android:padding="@dimen/margin16">


        <agri.app.Customviews.HelveticaNeuBoldTextView
            android:id="@+id/mandi_detail_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_veg"
            android:textSize="@dimen/text_size30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <agri.app.Customviews.HelveticaNeuBoldTextView
                    android:id="@+id/mandi_detail_item_mandi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_mandi"
                    android:textSize="@dimen/textSize26" />

                <agri.app.Customviews.HelveticaNeuBoldTextView
                    android:id="@+id/mandi_detail_item_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_dist"
                    android:textSize="@dimen/text_size24" />

                <agri.app.Customviews.HelveticaNeuBoldTextView
                    android:id="@+id/mandi_detail_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_price"
                    android:textSize="@dimen/text_size20" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mandi_detail_item_image"
                    android:layout_width="@dimen/margin200dp"
                    android:layout_height="@dimen/margin200dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tomato" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_map" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:weightSum="1">

            <agri.app.Customviews.HelveticaNeuBoldTextView
                android:id="@+id/mandi_card_details"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/margin12"
                android:textColor="@color/gray_dark"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="true"
                android:text="@string/details"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:weightSum="1">

        <ImageView
            android:id="@+id/mandi_card_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginEnd="@dimen/margin12"
            android:background="@drawable/ic_right_arrow"
            android:baselineAlignBottom="true"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v7.widget.CardView>