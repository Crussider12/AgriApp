<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_header_background_gradient"
    android:gravity="bottom"

    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/margin12"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageButton
        android:id="@+id/dialogAvatar"
        android:layout_width="@dimen/margin70"
        android:layout_height="@dimen/margin70"
        android:layout_marginTop="@dimen/margin30"
        android:background="@drawable/border"
        android:elevation="@dimen/margin2"
        android:fadingEdge="vertical"
        android:onClick="Header"
        android:padding="@dimen/margin10"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/profilepic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="horizontal">

        <agri.app.Customviews.HelveticaNeuBoldTextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:layout_weight="7"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size16" />

        <ImageView
            android:layout_width="@dimen/margin8"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="@dimen/margin1"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/ic_chevron_right_black_24dp"

            android:onClick="Header" />
    </LinearLayout>

</LinearLayout>
